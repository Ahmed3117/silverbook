				{
					"name": "Signup",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set('access_token', jsonData.access);",
									"    pm.collectionVariables.set('refresh_token', jsonData.refresh);",
									"    pm.collectionVariables.set('username', jsonData.user.username);",
									"    pm.collectionVariables.set('user_id', jsonData.user.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"testuser\",\n    \"password\": \"testpass123\",\n    \"name\": \"Test User\",\n    \"email\": \"testuser@example.com\",\n    \"phone\": \"01234567890\",\n    \"user_type\": \"student\",\n    \"year\": \"first-secondary\",\n    \"division\": \"علمى رياضة\",\n    \"government\": \"1\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/accounts/signup/",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"accounts",
								"signup",
								""
							]
						},
						"description": "Register a new user account"
					},
					"response": []
				},
